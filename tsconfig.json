{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "declaration": true,
    "pretty": true,
    "outDir": "build",
    "plugins": [
      {
        "transform": "ts-optchain/transform"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true,
  "include": [
    "**/src/*",
    "**/test/*"
  ]
}
